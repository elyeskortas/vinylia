// prisma/schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vinyl {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  price       Float
  stock       Int
  category    String
  image       String
  soundcloud  String?
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  wishlist  Vinyl[]  @relation("UserWishlist")
  cart      Vinyl[]  @relation("UserCart")
}
